<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.ActivityDetailPage"
             Title="Szczegóły">
    <ScrollView>
        <StackLayout Padding="16" Spacing="10">
            <Label x:Name="titleLabel" Text="{Binding Name}" FontSize="22" FontAttributes="Bold" />
            <Label x:Name="startLabel" Text="{Binding StartTime, StringFormat='Start: {0:dd.MM.yyyy HH:mm}'}" />
            <Label x:Name="endLabel" Text="{Binding EndTime, StringFormat='Koniec: {0:dd.MM.yyyy HH:mm}'}" />
            <Label x:Name="distanceLabel" Text="{Binding DistanceKm, StringFormat='Dystans: {0:0.00} km'}" />
            <Label x:Name="paceLabel" Text="{Binding PaceText, StringFormat='Tempo: {0}'}" />
            <Label x:Name="speedLabel" Text="{Binding SpeedText, StringFormat='Prędkość: {0}'}" />
            <Label x:Name="typeLabel" Text="{Binding Type, StringFormat='Typ: {0}'}" />
            <Label x:Name="noteLabel" Text="{Binding Note, StringFormat='Notatka: {0}'}" />
            <Label x:Name="trackLabel" Text="{Binding TrackCount, StringFormat='Punkty trasy: {0}'}" />
            <Image x:Name="photoImage" HeightRequest="220" IsVisible="False" />
            <CollectionView ItemsSource="{Binding Track}" IsVisible="True">
                <CollectionView.Header>
                    <Label x:Name="trackListLabel" Text="Ślad GPS" FontAttributes="Bold" />
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" Spacing="8" Padding="4">
                            <Label Text="{Binding Latitude, StringFormat='Lat: {0:F5}'}" />
                            <Label Text="{Binding Longitude, StringFormat='Lon: {0:F5}'}" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>

