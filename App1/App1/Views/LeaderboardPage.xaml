<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.LeaderboardPage"
             Title="Ranking">
    <StackLayout Padding="20" Spacing="12">
        <Label Text="{Binding Message}" TextColor="Gray" />
        <CollectionView x:Name="list" ItemsSource="{Binding Items}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Label x:Name="posLabel" Text="{Binding Position}" FontAttributes="Bold" />
                    <Label x:Name="userLabel" Text="{Binding User}" />
                    <Label x:Name="distLabel" Text="{Binding DistanceKm, StringFormat='{}{0:0.0} km'}" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
