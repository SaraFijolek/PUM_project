<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.ResetPasswordPage"
             Title="Reset hasła">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="12">
                <Label x:Name="titleLabel" Text="Reset hasła" FontSize="26" HorizontalOptions="Center" />
                <Entry x:Name="emailEntry" Placeholder="E-mail" Keyboard="Email" />
                <Button x:Name="resetBtn" Text="Wyślij link resetujący" Clicked="OnResetClicked" />
                <Label x:Name="messageLabel" TextColor="Red" IsVisible="False" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
